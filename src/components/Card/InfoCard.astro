---
export interface Props {
  title: string;
  body?: string;
  description?: string;
  class?: string;
}

const { title, body, description, class: className = '' } = Astro.props;
const content = body || description || '';
---

<div class={`flex flex-col h-full bg-[var(--color-bg-light)] relative ${className}`}>
  <!-- Turquoise vertical accent line on the left -->
  <div class="absolute left-0 top-0 bottom-0 w-1 bg-[var(--color-accent-turquoise)]"></div>
  
  <div class="ml-1 p-6 md:p-8">
    {title && (
      <h3 class="font-heading text-xl md:text-2xl font-bold text-darker mb-4 leading-tight">
        {title}
      </h3>
    )}
    {content && (
      <div class="font-body text-base leading-relaxed text-dark">
        <p class="m-0">{content}</p>
      </div>
    )}
  </div>
</div>

