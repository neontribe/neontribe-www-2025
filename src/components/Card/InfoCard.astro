---
export interface Props {
  title: string;
  body?: string;
  description?: string;
  titleSize?: 'large' | 'small';
  class?: string;
}

const { title, body, description, titleSize = 'large', class: className = '' } = Astro.props;
const content = body || description || '';
const titleClass = titleSize === 'small' ? 'text-[22px] font-bold' : 'text-2xl font-bold';
---

<div class={`flex flex-col h-full bg-[var(--color-bg-light)] relative ${className}`}>
  <!-- Turquoise vertical accent line on the left -->
  <div class="absolute left-0 top-0 bottom-0 w-1 bg-[var(--color-accent-turquoise)]"></div>
  
  <div class="ml-1 p-6 md:p-8">
    {title && (
      <h3 class={`font-heading ${titleClass} text-darker mb-4 leading-tight`}>
        {title}
      </h3>
    )}
    {content && (
      <div class="font-body text-base text-dark leading-normal">
        <p class="m-0">{content}</p>
      </div>
    )}
  </div>
</div>

