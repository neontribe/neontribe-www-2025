---
export interface Props {
  label: string;
  class?: string;
}

const { label, class: className = "" } = Astro.props;
---

<span
  class={`inline-block px-6 py-2 bg-[var(--color-accent-amethyst)] text-[var(--color-text-light)] font-bold text-base leading-tight break-words max-w-full ${className}`}
  aria-label={label}
>
  {label}
</span>


