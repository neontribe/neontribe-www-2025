---
import Button from '../ui/Button.astro';
import Logo from '../ui/Logo.astro';
---

<header class="section section-dark">
  <div class="container py-4 flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="flex items-center space-x-4 sm:space-x-8">
      <div class="flex items-center space-x-4">
        <Logo />
        <span class="text-gray-400">|</span>
        <span class="text-gray-400 text-sm">Part of the dxw family</span>
      </div>
    </div>
    
    <nav class="flex flex-wrap items-center gap-4 sm:gap-6">
      <a href="/case-studies" class="text-white hover:text-gray-300 text-lg transition-colors">Case Studies</a>
      <a href="/how-we-work" class="text-white hover:text-gray-300 text-lg transition-colors">How We Work</a>
      <a href="/advice-service" class="text-white hover:text-gray-300 text-lg transition-colors">Advice Service</a>
      <Button variant="teal" size="sm">
        Talk to us
      </Button>
    </nav>
  </div>
</header>
