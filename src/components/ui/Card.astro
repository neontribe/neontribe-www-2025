---
export interface Props {
  variant?: 'testimonial' | 'project' | 'default';
  class?: string;
  children: any;
}

const { variant = 'default', class: className = '', children } = Astro.props;

const variantClasses = {
  default: "bg-white border border-gray-200 rounded-lg p-6 shadow-sm",
  testimonial: "bg-brand-amethyst text-white p-6 rounded-lg",
  project: "bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow"
};

const classes = `${variantClasses[variant]} ${className}`;
---

<div class={classes}>
  {children}
</div>
