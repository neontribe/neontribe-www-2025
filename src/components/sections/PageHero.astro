---
export interface Props {
  title: string;
  subtitle: string;
  icon?: 'case-studies' | 'how-we-work' | 'advice-service' | 'talk-to-us';
}

const { title, subtitle, icon = 'case-studies' } = Astro.props;

const iconMap = {
  'case-studies': '/src/assets/Search.svg',
  'how-we-work': '/src/assets/Circle.svg', 
  'advice-service': '/src/assets/Question.svg',
  'talk-to-us': '/src/assets/Question.svg'
};
---

<section class="section section-dark">
  <div class="container">
    <div class="flex flex-col md:flex-row items-center justify-center md:items-center gap-6 lg:gap-8 pt-8 pb-12 md:py-12 lg:py-16 text-center md:text-left">
      <!-- Icon sized -->
      <div class="w-24 h-24 flex items-center justify-center flex-shrink-0">
        <img 
          src={iconMap[icon]} 
          alt={`${title} icon`} 
          class="w-full h-full object-contain" 
        />
      </div>
      
      <!-- Content -->
      <div class="flex-1 max-w-4xl">
        <h1 class="text-3xl font-bold text-white mb-2 leading-tight">
          {title}
        </h1>
        <p class="text-xl text-white/90 leading-relaxed max-w-3xl font-normal mx-auto md:mx-0" 
           style="font-family: 'Mulish', sans-serif; font-weight: 400; font-size: 20px;">
          {subtitle}
        </p>
      </div>
    </div>
  </div>
</section>