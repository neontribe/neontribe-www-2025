---
import Button from '../Button/Button.astro';
import TwoColumnLayout from './TwoColumnLayout.astro';

export interface Props {
  title: string;
  bodyText: string[];
  buttonLabel: string;
  buttonHref: string;
}

const {
  title,
  bodyText,
  buttonLabel,
  buttonHref,
} = Astro.props;
---

<section class="who-youll-be-working-with-section">
  <div class="container">
    <TwoColumnLayout columnOrder="text-left" align="top">
      <div slot="leftContent" class="flex flex-col">
        <h2 class="who-youll-be-working-with-heading">{title}</h2>
        
        <div class="who-youll-be-working-with-body">
          {bodyText.map((paragraph) => (
            <p class="who-youll-be-working-with-paragraph" set:html={paragraph} />
          ))}
        </div>
        
        <div class="who-youll-be-working-with-button-wrapper who-youll-be-working-with-button-desktop">
          <Button href={buttonHref} variant="primary" class="w-full md:w-auto">
            {buttonLabel}
          </Button>
        </div>
      </div>
      
      <div slot="rightContent" class="who-youll-be-working-with-right-content">
        <slot name="rightContent" />
        <div class="who-youll-be-working-with-button-wrapper who-youll-be-working-with-button-mobile">
          <Button href={buttonHref} variant="primary" class="w-full">
            {buttonLabel}
          </Button>
        </div>
      </div>
    </TwoColumnLayout>
  </div>
</section>

<style>
  .who-youll-be-working-with-body :global(a) {
    color: var(--color-accent-amethyst);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }
  
  .who-youll-be-working-with-body :global(a:hover) {
    color: #8751F8;
  }
</style>
