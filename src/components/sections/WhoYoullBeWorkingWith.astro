---
import Button from '../Button/Button.astro';

export interface Props {
  title: string;
  bodyText: string[];
  buttonLabel: string;
  buttonHref: string;
  imageSrc?: string;
  imageAlt?: string;
}

const {
  title,
  bodyText,
  buttonLabel,
  buttonHref,
  imageSrc,
  imageAlt = '',
} = Astro.props;
---

<section class="who-youll-be-working-with-section">
  <div class="container">
    <div class="who-youll-be-working-with-content">
      <div class="flex flex-col">
        <h2 class="who-youll-be-working-with-heading">{title}</h2>
        
        <div class="who-youll-be-working-with-body">
          {bodyText.map((paragraph) => (
            <p class="who-youll-be-working-with-paragraph">{paragraph}</p>
          ))}
        </div>
        
        <div class="who-youll-be-working-with-button-wrapper">
          <Button href={buttonHref} variant="primary">
            {buttonLabel}
          </Button>
        </div>
      </div>
      
      {imageSrc && (
        <div class="who-youll-be-working-with-image-wrapper">
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="who-youll-be-working-with-image"
          />
        </div>
      )}
    </div>
  </div>
</section>

