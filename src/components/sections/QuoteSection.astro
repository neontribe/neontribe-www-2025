---
import QuoteCard from '../Testimonials/QuoteCard.astro';
import Button from '../Button/Button.astro';
---

<section class="w-full bg-bg-light py-16 md:py-20">
  <div class="container md:border md:border-black px-6 md:px-0 lg:px-0 quote-section-container">
    <h2 class="font-heading text-3xl md:text-4xl font-bold text-[#090909] mb-8 md:mb-12">
      Who we've been working with
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-8 md:mb-10">
      <QuoteCard
        quote="A quote from a customer explaining the project, the impact of the work and why they loved working with us"
        customerName="Customer name"
        customerOrganisation="Customer organisation"
      />
      
      <QuoteCard
        quote="A quote from a customer explaining the project, the impact of the work and why they loved working with us"
        customerName="Customer name"
        customerOrganisation="Customer organisation"
      />
      
      <QuoteCard
        quote="A quote from a customer explaining the project, the impact of the work and why they loved working with us"
        customerName="Customer name"
        customerOrganisation="Customer organisation"
      />
    </div>
    
    <div class="flex justify-start">
      <Button href="/case-studies" variant="teal" size="md">
        See more case studies
      </Button>
    </div>
  </div>
</section>

<style>
  @media (min-width: 768px) {
    .quote-section-container {
      padding-left: 0 !important;
      padding-right: 0 !important;
    }
  }
</style>

