---
import Button from '../Button/Button.astro';
import twoHalLogo from '../../assets/Two-hal-logo.svg';
---
<section class="section section-dark py-6 md:py-8">
  <div class="w-full md:max-w-[1336px] md:mx-auto">
    <div class="grid md:grid-cols-12 md:items-center md:gap-12 lg:gap-16 p-8 md:p-10">
      <!-- Left content -->
      <div class="md:col-span-7 lg:col-span-8 flex flex-col gap-4 md:gap-3">
        <h2 class="text-5xl md:text-6xl font-bold leading-tight text-white">
          Get in touch
        </h2>
        
        <!-- Mobile image  -->
        <div class="md:hidden flex justify-center py-4" aria-hidden="true">
          <img 
            src={twoHalLogo.src} 
            alt="" 
            class="w-[240px] h-auto"
          />
        </div>
        
        <div class="text-lg md:text-base leading-relaxed text-white max-w-none">
          <p>Interested in working with us? Please feel free to get in touch by emailing <br/> hello@neontribe.co.uk or clicking the link below.</p>
        </div>
        
        <div class="mt-2 flex justify-center md:justify-start">
          <div class="w-full md:w-auto">
            <Button href="/talk-to-us" ariaLabel="Talk to us" variant="teal" size="get-in-touch" class="w-full md:w-auto">
              Talk to us
            </Button>
          </div>
        </div>
      </div>
      
      <!-- Right image -->
      <div class="hidden md:flex md:col-span-5 lg:col-span-4 justify-center md:justify-end items-center" aria-hidden="true">
          <img 
            src={twoHalLogo.src} 
            alt="" 
            class="w-[140px] lg:w-[160px] h-auto"
          />
        </div>
      </div>
    </div>
  </div>
</section>