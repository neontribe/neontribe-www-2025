---
import Button from '../Button/Button.astro';

// Placeholder data 
const title =
  'Helping young people to understand and use generative AI in positive ways.';
const description =
  'A brief description of the project problem and the process we took to solve it. We should emphasise what the impact of the project was.';
const slug = null; // Will be set to latest case study slug
const heroImage = null; // Placeholder 
const heroImageAlt = 'Case study image';

// Button href - set to null for now, will link to latest case study later
const buttonHref = slug ? `/case-studies/${slug}` : null;
---

<section class="w-full bg-bg-light relative md:px-6">
  <div class="w-screen bg-[#090909] md:bg-bg-dark relative -mt-[77px] z-10 left-1/2 -translate-x-1/2">
    <div class="w-full md:max-w-[1336px] md:mx-auto h-[77px] min-h-[77px] relative px-6 md:px-0">
      <div class="flex items-center justify-center md:justify-start h-full bg-[#4B00E7] w-fit md:w-full mx-auto md:mx-0 px-16 md:px-10">
        <span class="text-white font-heading text-xl md:text-2xl font-bold">
          Our latest work <span class="text-[#48E9CE]">â†“</span>
        </span>
      </div>
    </div>
  </div>
  
  <div class="w-full md:max-w-[1336px] md:mx-auto relative">
    <div class="bg-white flex flex-col w-full md:max-w-[1336px] min-h-[509px]">
      <div class="grid grid-cols-1 md:grid-cols-[1.2fr_1fr] gap-6 md:gap-10 p-8 md:p-10 items-start md:items-stretch flex-1 h-full">
        <div class="flex flex-col order-2 md:order-1">
          <h2 class="font-heading text-2xl font-bold text-[#090909] mb-4">
            {title}
          </h2>
          <p class="font-body text-base font-normal text-[#090909] mb-4">
            {description}
          </p>
          <p class="font-body text-base font-normal text-[#090909] mb-4">
            {description}
          </p>
          <div class="mt-16 latest-work-button-wrapper flex justify-center md:justify-start">
            <div class="w-full md:w-auto">
              {buttonHref ? (
                <Button href={buttonHref} variant="primary" size="md" class="w-full md:w-auto">
                  read full case study
                </Button>
              ) : (
                <Button variant="primary" size="md" class="w-full md:w-auto">
                  read full case study
                </Button>
              )}
            </div>
          </div>
        </div>

        <div class="w-full md:self-stretch order-1 md:order-2">
          {heroImage ? (
            <img
              src={heroImage.src}
              alt={heroImageAlt}
              class="w-full h-full min-h-[260px] max-h-[400px] object-cover block"
            />
          ) : (
            <div class="w-full min-h-[260px] md:min-h-[300px] h-full bg-bg-light flex items-center justify-center">
              <span class="text-neutral-grey font-body text-base">
                Case study image
              </span>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .latest-work-button-wrapper a,
  .latest-work-button-wrapper button {
    font-weight: 400 !important;
    font-size: 20px !important;
    font-family: var(--font-button) !important;
  }
  
  @media (min-width: 768px) {
    .latest-work-button-wrapper a,
    .latest-work-button-wrapper button {
      font-size: 20px !important;
    }
  }
</style>
