---
import Button from '../Button/Button.astro';

// Placeholder data 
const title =
  'Helping young people to understand and use generative AI in positive ways.';
const description =
  'A brief description of the project problem and the process we took to solve it. We should emphasise what the impact of the project was.';
const slug = null; // Will be set to latest case study slug
const heroImage = null; // Placeholder 
const heroImageAlt = 'Case study image';

// Button href - set to null for now, will link to latest case study later
const buttonHref = slug ? `/case-studies/${slug}` : null;
---

<section class="latest-work">
  <div class="latest-work-bar-wrapper">
    <div class="latest-work-bar">
      <div class="latest-work-bar-content">
        <span class="latest-work-bar-text">Our latest work <span class="latest-work-arrow">â†“</span></span>
      </div>
    </div>
  </div>
  
  <div class="latest-work-container">
    <div class="latest-work-card">
      <div class="latest-work-body">
      <div class="latest-work-content">
        <h2 class="latest-work-title">
          {title}
        </h2>
        <p class="latest-work-description">
          {description}
        </p>
        <p class="latest-work-description">
          {description}
        </p>
        <div class="latest-work-button">
          {buttonHref ? (
            <Button href={buttonHref} variant="primary" size="md">
              read full case study
            </Button>
          ) : (
            <Button variant="primary" size="md">
              read full case study
            </Button>
          )}
        </div>
      </div>

      <div class="latest-work-image-wrapper">
        {heroImage ? (
          <img
            src={heroImage.src}
            alt={heroImageAlt}
            class="latest-work-image"
          />
        ) : (
          <div class="latest-work-placeholder">
            <span class="latest-work-placeholder-text">
              Case study image
            </span>
          </div>
        )}
      </div>
    </div>
  </div>
  </div>
</section>

<style>
  .latest-work {
    width: 100%;
    background-color: var(--color-bg-light);
    position: relative;
    padding-left: var(--space-6);
    padding-right: var(--space-6);
  }

  /* Purple bar wrapper - full width with black sides */
  .latest-work-bar-wrapper {
    width: calc(100% + 2 * var(--space-6));
    margin-left: calc(-1 * var(--space-6));
    margin-right: calc(-1 * var(--space-6));
    background-color: var(--color-bg-dark);
    position: relative;
    margin-top: -77px;
    z-index: 10;
  }

  /* Purple bar - centered with max-width */
  .latest-work-bar {
    max-width: 1336px;
    margin: 0 auto;
    background-color: var(--color-accent-amethyst);
    height: 77px;
    min-height: 77px;
    position: relative;
  }

  .latest-work-bar-content {
    padding: 0 var(--space-8);
    display: flex;
    align-items: center;
    height: 100%;
  }

  /* Container for white card */
  .latest-work-container {
    max-width: 1336px;
    margin: 0 auto;
    position: relative;
  }

  /* Centered white card - 1336x509 */
  .latest-work-card {
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1336px;
    min-height: 509px;
  }

  .latest-work-bar-text {
    color: var(--color-text-light);
    font-family: var(--font-body);
    font-size: var(--text-lg);
    font-weight: var(--font-regular);
  }

  .latest-work-arrow {
    color: var(--color-accent-turquoise);
  }

  /* Content layout */
  .latest-work-body {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    padding: var(--space-8) var(--space-6);
    align-items: start;
    flex: 1;
    min-height: 509px;
  }

  @media (min-width: 768px) {
    .latest-work-body {
      grid-template-columns: 1fr 1fr; /* equal columns for text and image */
      gap: var(--space-10);
      padding: var(--space-10) var(--space-8);
      align-items: stretch;
      min-height: 509px;
    }
  }
  
  .latest-work-content {
    display: flex;
    flex-direction: column;
  }

  .latest-work-title {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-text-darker);
    margin-bottom: var(--space-4);
  }

  .latest-work-description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-dark);
    margin-bottom: var(--space-4);
  }

  .latest-work-button {
    margin-top: var(--space-4);
  }

  /* Image column */
  .latest-work-image-wrapper {
    width: 100%;
  }

  @media (min-width: 768px) {
    .latest-work-image-wrapper {
      align-self: stretch;
    }
  }

 
  .latest-work-image {
    width: 100%;
    height: 100%;
    min-height: 260px;
    max-height: 400px;
    object-fit: cover;
    display: block;
  }

  .latest-work-placeholder {
    width: 100%;
    min-height: 260px;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  @media (min-width: 768px) {
    .latest-work-placeholder {
      min-height: 300px;
    }
  }

  .latest-work-placeholder-text {
    color: var(--color-neutral-grey);
    font-family: var(--font-body);
    font-size: var(--text-base);
  }
</style>
