---
export interface Props {
  title: string;
  paragraphs: string[];
  buttonText?: string;
  buttonHref?: string;
}

const {
  title,
  paragraphs,
  buttonText = "Sound good? Let's chat",
  buttonHref = "/talk-to-us",
} = Astro.props;

import Button from '../Button/Button.astro';
import howWeWorkDiagram from '../../assets/How-we-work.svg';
---

<section 
  class="section section-dark w-full"
  style="min-height: 578px;"
>
  <div class="w-full md:max-w-[1336px] md:mx-auto">
    <div class="grid md:grid-cols-2 gap-12 lg:gap-16 items-center p-8 md:p-10" style="min-height: 578px;">
      <!-- Image: first on mobile, second (right) on desktop -->
      <div class="relative flex items-center justify-center order-1 md:order-2" style="min-height: 400px;">
        <img 
          src={howWeWorkDiagram.src} 
          alt="Design process: Discover, Define, Develop, Deliver"
          class="w-full max-w-[500px] h-auto"
        />
      </div>

      <!-- Text: second on mobile, first (left) on desktop -->
      <div style="width: 100%; max-width: 572px; min-height: 353px;" class="flex flex-col justify-center order-2 md:order-1">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">
          {title}
        </h2>
        {paragraphs.map((paragraph) => (
          <p class="text-base md:text-lg leading-relaxed text-white mb-4 last:mb-8">
            {paragraph}
          </p>
        ))}
        <div class="mt-2 flex justify-center md:justify-start">
          <div class="w-full md:w-auto">
            <Button href={buttonHref} variant="teal" class="w-full md:w-auto">
              {buttonText}
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
