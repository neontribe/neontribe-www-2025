---
import Button from '../Button/Button.astro';
import TwoColumnLayout from './TwoColumnLayout.astro';

export interface Props {
  title: string;
  bodyText: string[];
  buttonLabel: string;
  buttonHref: string;
  imageSrc?: string;
  imageAlt?: string;
  decorativeImageSrc?: string;
  decorativeImageAlt?: string;
  columnOrder?: 'text-left' | 'text-right';
  align?: 'top' | 'center';
}

const {
  title,
  bodyText,
  buttonLabel,
  buttonHref,
  imageSrc,
  imageAlt = '',
  decorativeImageSrc,
  decorativeImageAlt = '',
  columnOrder = 'text-left',
  align = 'top',
} = Astro.props;
---

<section class="commitment-section">
  <div class="commitment-container">
    <TwoColumnLayout columnOrder={columnOrder} align={align}>
      <div slot="leftContent" class="flex flex-col">
        <h2 class="commitment-heading">{title}</h2>
        
        <div class="commitment-body">
          {bodyText.map((paragraph) => (
            <p class="commitment-paragraph">{paragraph}</p>
          ))}
        </div>
        
        <div class="commitment-button-wrapper">
          <Button href={buttonHref} variant="primary">
            {buttonLabel}
          </Button>
        </div>
      </div>
      
      {imageSrc && (
        <div slot="rightContent" class="commitment-image-wrapper">
          {decorativeImageSrc && (
            <img 
              src={decorativeImageSrc} 
              alt={decorativeImageAlt}
              class="commitment-decorative-image"
            />
          )}
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="commitment-image"
          />
        </div>
      )}
    </TwoColumnLayout>
  </div>
</section>

