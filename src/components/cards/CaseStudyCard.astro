---
import Tag from '../ui/Tag.astro';
import CaseStudyContent from './CaseStudyContent.astro';

export interface Props {
  category?: string;
  title: string;
  summary?: string;
  imageSrc?: string | { src: string } | any;
  altText?: string;
  linkHref: string;
  linkText?: string;
  class?: string;
}

const {
  category, title, summary, imageSrc, altText = '',
  linkHref, linkText, class: className = ''
} = Astro.props;
---

<div class={`case-study-card ${className}`}>
  {category && (
    <div class="case-study-card__tag">
      <Tag label={category} />
    </div>
  )}

  <CaseStudyContent
    title={title}
    summary={summary}
    imageSrc={imageSrc}
    altText={altText}
    linkHref={linkHref}
    linkText={linkText}
  />
</div>

<style>
  .case-study-card {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #fff;
    border: 1px solid var(--color-neutral-light-grey);
    padding: var(--card-padding-top) var(--card-padding-sides) var(--card-padding-bottom);
    color: inherit;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
    transition: box-shadow .2s ease;
  }

  /* Position tag inside card at top-left */
  .case-study-card__tag {
    position: absolute;
    left: 0; 
    top: 0; 
    z-index: 1;
  }
</style>

