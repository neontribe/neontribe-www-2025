---
import Tag from '../ui/Tag.astro';
import CaseStudyContent from './CaseStudyContent.astro';

export interface Props {
  customer?: string;
  title: string;
  summary?: string;
  imageSrc?: string | { src: string } | any;
  altText?: string;
  linkHref: string;
  linkText?: string;
  class?: string;
}

const {
  customer, title, summary, imageSrc, altText = '',
  linkHref, linkText, class: className = ''
} = Astro.props;
---

<div class={`case-study-card relative flex flex-col h-full bg-white text-inherit ${className}`} style="padding: var(--card-padding-top) var(--card-padding-sides) var(--card-padding-bottom);">
  {customer && (
    <div class="absolute left-0 top-0 z-10">
      <Tag label={customer} />
    </div>
  )}

  <CaseStudyContent
    title={title}
    summary={summary}
    imageSrc={imageSrc}
    altText={altText}
    linkHref={linkHref}
    linkText={linkText}
  />
</div>

