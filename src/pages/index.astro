---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import OurLatestWork from '../components/sections/OurLatestWork.astro';
import HowWeCanHelp from '../components/sections/HowWeCanHelp.astro';
import QuoteSection from '../components/sections/QuoteSection.astro';
import GetInTouch from '../components/sections/GetInTouch.astro';
---

<Layout title="Neontribe" description="Digital services committed to tech for good">
  <div class="homepage-header-hero bg-bg-dark w-full flex flex-col overflow-visible md:overflow-hidden">
    <Header />
    <Hero />
  </div>
  <main id="content">
    <OurLatestWork />
    <HowWeCanHelp 
      title="How we can help"
      paragraphs={[
        "We're happiest starting with people; understanding the issues they face in their daily lives and in working to help others.",
        "We're always happy to talk to charities, and then suggest a way forward.",
        "So drop us a line to have that first conversation, and we'll get straight back to you. No charge."
      ]}
    />
    <QuoteSection />
    <GetInTouch />
  </main>
  <Footer />
</Layout>

<style>
  /* Remove any line/border between header and hero on mobile for homepage */
  @media (max-width: 767px) {
    .homepage-header-hero {
      background-color: var(--color-bg-dark) !important;
      gap: 0 !important;
    }
    .homepage-header-hero :global(header.section-dark) {
      border-bottom: none !important;
      margin-bottom: 0 !important;
      padding-bottom: 0 !important;
      background-color: var(--color-bg-dark) !important;
    }
    .homepage-header-hero :global(section.section-dark) {
      border-top: none !important;
      margin-top: 0 !important;
      padding-top: 2rem !important;
      background-color: var(--color-bg-dark) !important;
    }
  }
</style>
